<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">

	<New id="ontrackDataSource" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg>jdbc/ontrack</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="DriverClassName">org.h2.Driver</Set>
				<Set name="Url">jdbc:h2:file:work/ontrack-dev/db/data;AUTOCOMMIT=OFF;MVCC=true</Set>
				<Set name="Username">sa</Set>
				<Set name="Password"></Set>
				<Set name="DefaultAutoCommit">false</Set>
				<Set name="InitialSize">2</Set>
				<Set name="MaxActive">4</Set>
			</New>
		</Arg>
	</New>

</Configure>
